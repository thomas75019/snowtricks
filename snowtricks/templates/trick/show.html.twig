{% extends 'base.html.twig' %}

{% block title %}Trick{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/article.css') }}" rel="stylesheet">
{% endblock %}

{% block header %}
    <div id="headerwrap">
        <div class="container">
            <div class="row centered">
                <div class="col-lg-8 col-lg-offset-2 mt">
                    <h1 class="animation slideDown" style="color:black;">{{ trick.name|upper }}</h1>
                </div>
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /headerwrap -->

{% endblock %}

{% block body %}
    <article>
        {{ trick.description }}
    </article>

    <hr style="margin: 5% 25% 5% 25%; ">


    {% include('message/new.html.twig') %}

    <hr style="margin: 1% 25% 1% 25%; ">

    {% for message in messages %}
        <div class="container">
            <div class="row">
                <div class="col-sm-8">
                    <div class="author-bio media">
                        <div class="author-avatar media-left pull-left" id="avatar"><img class="img-circle" src="{{ asset('assets/img/to_top.png') }}" alt="Avatar"></div><!-- /.author-avatar -->
                        <div class="author-details media-body">
                            <h3 class="name"><a href="#">{{ message.user.name }}</a></h3>
                            <p>
                                {{ message.content }}
                            </p>
                        </div><!-- /.author-details -->
                    </div><!-- /.author-bio -->
                </div>
            </div>
        </div>

    {% endfor %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
