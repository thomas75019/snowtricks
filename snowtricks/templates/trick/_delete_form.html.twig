<form method="post" action="{{ path('trick_delete', {'id': trick.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trick.id) }}">
    <div class="align">
        <div id="delete">
            <button style="border: none; background-color: transparent"><i class="fa fa-trash"></i></button>
        </div>
        <div id="edit">
            <button style="border: none; background-color: transparent "><a href="{{ path('trick_edit', {'id' : trick.id}) }}"><i class="fa fa-edit"></i></a></button>
        </div>
    </div>
</form>


