<form method="post" action="{{ path('video_delete', {'id': video.id, 'trick_id': trick.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ video.id) }}">
    <div class="align">
        <div id="delete">
            <button style="border: none; background-color: transparent; color: red; font-size: 20px"><i class="fa fa-trash"></i></button>
        </div>
    </div>
</form>
